<script type="text/template" id="commentTemplate">
{{each $data val}}
<tr class="{{val.status=='held'?'danger':''}}">
  <td class="text-center"><input type="checkbox"></td>
  <td>{{val.author}}</td>
  <td>{{val.content}}</td>
  <td>{{val.title}}</td>
  <td>{{val.created}}</td>
  <td>
    {{if(val.status=='approved')}}
    {{'已批准'}}
    {{else if(val.status=='rejected')}}
    {{'已驳回'}}
    {{else if(val.status=="held")}}
    {{'未批准'}}
    {{/if}}
  </td>
  <td class="text-center">
    <a href="post-add.html" class="btn {{if(val.status=='approved')}}
    {{'btn-warning'}}
    {{else if(val.status=='rejected')}}
    {{'btn-success'}}
    {{else if(val.status=='held')}}
    {{'btn-info'}}
    {{/if}}
     btn-xs"> {{if(val.status=='approved')}}
        {{'驳回'}}
        {{else if(val.status=='rejected')}}
        {{'批准'}}
        {{else if(val.status=="held")}}
        {{'批准'}}
        {{/if}}</a>
    <a href="javascript:;" class="btn btn-danger btn-xs">删除</a>
  </td>
</tr>
{{/each}}
</script>
